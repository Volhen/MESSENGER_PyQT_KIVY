#:kivy 1.11.0

<ContainerWidget>:

    display:display
    button:btn

    ActionBar:

        background_image: ''
        background_color: 0.28, 0.95, 0.87, 0.79
        
        ActionView:
            use_separator: True

            ActionPrevious:
                # title: 'Action Bar'
                with_previous: False  
                app_icon: 'icon/menu_button.png'


    PageLayout:

        border:25

        

        BoxLayout:
            orientation:'vertical'

            TextInput:

                id:display
                size_hint_x: 1
                size_hint_y: .7
                readonly: True
            
            GridLayout:

                cols:2
                size_hint_y: .3

                BoxLayout:
                
                    orientation:'vertical'
                    # size_hint_x:.5

                    BoxLayout:
                
                        # orientation:'vertical'
                        size_hint_y:None
                        height: 30
                        padding: 10
                        spacing: 10

                        canvas:

                            Color:

                                rgba: 0.28, 0.95, 0.87, 0.79

                            Rectangle:

                                pos: self.pos
                                size: self.size

                        Button:
                            pos_hint:{'center_x': .5, 'center_y': .5}
                            background_normal: 'icon/b.jpg'
                            size_hint: None,None
                            size: 23,23
                        
                        Button:
                            pos_hint:{'center_x': .5, 'center_y': .5}
                            background_normal: 'icon/i.jpg'
                            size_hint: None,None
                            size: 22,22
                        
                        Button:
                            pos_hint:{'center_x': .5, 'center_y': .5}
                            background_normal: 'icon/u.jpg'
                            size_hint: None,None
                            size: 22,22
                        
                        Button:
                            pos_hint:{'center_x': .5, 'center_y': .5}
                            background_normal: 'icon/ab.gif'
                            size_hint: None,None
                            size: 20,24
                        
                        Button:
                            pos_hint:{'center_x': .5, 'center_y': .5}
                            background_normal: 'icon/ac.gif'
                            size_hint: None,None
                            size: 20,24
                        
                        Button:
                            pos_hint:{'center_x': .5, 'center_y': .5}
                            background_normal: 'icon/ai.gif'
                            size_hint: None,None
                            size: 20,20
        
                    
                    TextInput:

                        id:input
                        # text: 'Textinput'

                
                AnchorLayout:

                    size_hint: .1 , 1
                    anchor_x:'center'
                    anchor_y:'center'

                    canvas:

                        Color:

                            rgba: 0.28, 0.95, 0.87, 0.79

                        Rectangle:

                            pos: self.pos
                            size: self.size

                    Button:
                        
                        id: btn
                        background_normal:'icon/send_normal.png' 
                        background_down:'icon/send_touch.png'
                        size_hint: None,None
                        size: 32,32
                        # on_press: display.text += '555'


            
            
            
            
            

        
        
        
        
        Button:
            text: 'page2'

        Button:
            text: 'page3'    
        


        
        
        
        
        
        
